<Window x:Class="wpf_playground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_playground"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="DtdGrd1" ItemsSource ="{Binding ThisList}"  HorizontalAlignment="Left" Height="399" Margin="175,10,0,0" VerticalAlignment="Top" Width="617">
            <DataGrid.Columns>
                <DataGridTextColumn Foreground="CornflowerBlue" Binding="{Binding Name}" Width="*" Header="Name"></DataGridTextColumn>
                <DataGridTextColumn Foreground="CornflowerBlue" Binding="{Binding Age}" Width="*" Header="Age"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Click="Button_Click" Content="Button" HorizontalAlignment="Left" Margin="54,32,0,0" VerticalAlignment="Top" Width="99" Height="57"/>

    </Grid>
</Window>
